# Helper file for setting non-default PTK environment variables

# Common Unix variables
export @OS_LIBRARY_PATH_NAME@=@CMAKE_INSTALL_PREFIX@/@PTK_LIB_DIR@:$@OS_LIBRARY_PATH_NAME@
export PATH=@CMAKE_INSTALL_PREFIX@/@PTK_BIN_DIR@:$PATH
export PKG_CONFIG_PATH=@CMAKE_INSTALL_PREFIX@/@PTK_PKGCONFIG_DIR@:$PKG_CONFIG_PATH
export PYTHONPATH=@PTK_INSTALL_PYTHON_MODULE_DIR@:@PTK_INSTALL_PYTHON_PURE_MODULE_DIR@:$PYTHONPATH
export MANPATH=@CMAKE_INSTALL_PREFIX@/@PTK_MAN_DIR@:$MANPATH

# Special Mac variables
export DYLD_FRAMEWORK_PATH=/opt/local/Library/Frameworks:$DYLD_FRAMEWORK_PATH

