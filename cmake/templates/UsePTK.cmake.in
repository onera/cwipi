#
# This file sets up include directories, link directories, and
# compiler settings for a project to use PDM. It should not be
# included directly, but rather through the PDM_USE_FILE setting
# obtained from PDMConfig.cmake.
#

if (NOT PDM_USE_FILE_INCLUDED)
  set(PDM_USE_FILE_INCLUDED 1)

  # Add compiler definitions needed to use PDM
  add_definitions(${PDM_CXX_DEFINITIONS})

  # Add compiler flags needed to use PDM
  set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${PDM_CXX_FLAGS}")
  set(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${PDM_LINK_FLAGS}")
  set(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${PDM_LINK_FLAGS}")
  set(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${PDM_LINK_FLAGS}")

  # Add include directories needed to use PDM
  include_directories(${PDM_INCLUDE_DIRS})
  include_directories(SYSTEM ${PDM_3RD_PARTY_INCLUDE_DIRS})

  # Add link directories needed to use PDM
  link_directories(${PDM_3RD_PARTY_LIBRARY_DIRS})
endif()
